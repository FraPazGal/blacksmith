{
  "compilation": {
    "prefix": "/usr/local"
  },
  "paths": {
    "recipes": ["./recipes"],
    "output": "./output",
    "sandbox": "./sandbox"
  },
  "componentTypeCollections": ["blacksmith-extra-component-types"],
  "metadataServer": {
    "activate": false,
    "prioritize": false,
    "endPoint": null
  },
  "plugins": [
      "blacksmith-containerized-build-command"
  ],
  "containerizedBuild": {
    "images": [{
      "id": "gcr.io/bitnami-containers/bitnami-base-buildpack:r1",
      "platform": {
        "os": "linux",
        "arch": "x64",
        "distro": "debian",
        "version": "8"
      }
    }]
  }
}
